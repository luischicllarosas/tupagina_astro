---
import { SEOMetadata } from "astro-seo-metadata";
import Navbar from "@/components/Navbar.vue";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/icons/logo/logo_black.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Edu+AU+VIC+WA+NT+Pre:wght@400..700&family=Karla:ital,wght@0,200..800;1,200..800&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta
      name="keywords"
      content="desarrollo de páginas web, diseño web en Perú, crear página web, pagina web, SEO Perú, diseño responsivo, páginas web profesionales, servicios web Perú"
    />
    <!-- https://code.juliancataldo.com/component/astro-seo-metadata/ -->
    <SEOMetadata
      siteName={"tupagina.com.pe"}
      title={"Desarrollo de Páginas Web en Perú - Diseño Profesional y SEO Optimizado"}
      description={"Crea tu página web profesional con nosotros. Ofrecemos diseño web moderno, SEO optimizado y mantenimiento. ¡Tu negocio online empieza aquí!"}
      image={"/icons/logo/logo_black.png"}
      favicon={"/favicon.svg"}
      author="@luischicllarosas"
      copyright="ISC"
      astroSitemap={true}
      canonicalUrl={Astro.url.toString()}
      type={"website"}
      astroGenerator={true}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
